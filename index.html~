<!DOCTYPE html>
<html>
  <head>
    <title>
      Rock-Paper-Scissors
    </title>
  </head>
  <body>
    <script>
      function randint(min, max) {
	  // returns a random integer between min and max (both included)
	  return Math.floor(Math.random()*(max-min+1)) + min;
      }
      
      function computerPlay() {
	  // produces a random move (rock, paper or scissors)
	  let playnum = randint(1,3);
	  let play;
	  switch (playnum) {
	  case 1:
	      play = 'rock';
	      break;
	  case 2:
	      play = 'paper';
	      break;
	  case 3:
	      play = 'scissors';
	      break;
	  }
	  return play;
      }
      
    </script>
  </body>
</html>
